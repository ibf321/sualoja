<%= render 'page/user_navbar' %>

<div class="row ri">
  <div class="col l8 offset-l2 s10">
    <div class="center">
     <h3>Lojas</h3>


    <a class="waves-effect  btn modal-trigger orange darken-4" href="lojas/new">Nova Loja</a>
  </div>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Descrcao</th>
      <th>Tag</th>
      <th>Segmente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lojas.each do |loja| %>
      <tr>
        <td><%= loja.name %></td>
        <td><%= loja.descrcao %></td>
        <td><%= loja.tag %></td>s
        <td> <%= link_to 'Visualizar', loja, class: 'class=" btn modal-trigger"' %></td>
        <td> <%= link_to 'Editar', edit_loja_path(loja), class: 'class="waves-effect  btn modal-trigger  amber darken-2' %></td>
        <td> <%= link_to 'Excluir',loja, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'class="waves-effect  btn modal-trigger red darken-3"' %></td>
      </tr
    <% end %>

  </tbody>
</table>

<br>

</div>

</div>


<div class="center">
  <%= paginate @lojas %>
</div>
<%= render 'page/user_footer' %>

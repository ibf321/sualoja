<%= render 'page/user_navbar' %>

<div class="row ri">
  <div class="col l8 offset-l2 s10">

<p id="notice"><%= notice %></p>

<h1>Lojas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Descrcao</th>
      <th>Tag</th>
      <th>Segmente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lojas.each do |loja| %>
      <tr>
        <td><%= loja.name %></td>
        <td><%= loja.descrcao %></td>
        <td><%= loja.tag %></td>
        <td><%= loja.segmente %></td>
        <td><%= link_to 'Show', loja %></td>
        <td><%= link_to 'Edit', edit_loja_path(loja) %></td>
        <td><%= link_to 'Destroy', loja, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>

</div>
<div class="center">
  <%= paginate @lojas %>
</div>
<%= render 'page/user_footer' %>
